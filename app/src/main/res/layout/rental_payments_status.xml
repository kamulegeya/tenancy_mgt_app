        android:paddingBottom="5sp"/>
<TextView  android:id="@+id/textView16"
      android:textColor="@color/green" 
     android:layout_marginLeft="55sp"
      android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toRightOf="@+id/textView15"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView17"
      android:textColor="@color/black" 
    android:layout_marginLeft="15sp"
      android:textSize="18sp"
        android:lineSpacingExtra="15sp" 
        android:text="@string/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15" 
        />
<TextView  android:id="@+id/textView18"
      android:textColor="@color/green" 
    android:layout_marginLeft="20sp"
      android:textSize="18sp"
        android:lineSpacingExtra="15sp" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_alignParentRight="true"        
        />

<TextView  android:id="@+id/textView19"
      android:textColor="@color/black" 
    android:layout_marginLeft="15sp"
      android:textSize="18sp"
        android:lineSpacingExtra="15sp" 
        android:text="Days overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18" 
        />
<TextView  android:id="@+id/textView20"
      android:textColor="@color/green" 
    android:layout_marginLeft="50sp"
      android:textSize="18sp"
        android:lineSpacingExtra="15sp" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toRightOf="@+id/textView19"
        android:layout_alignParentRight="true"        
        />

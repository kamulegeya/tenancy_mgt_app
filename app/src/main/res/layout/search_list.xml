<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
      android:background="@drawable/list_try3"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20sp"
        android:lineSpacingExtra="15sp"
        android:textSize="20sp"
        android:text="@string/tenant"/>
        
        <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
          android:lineSpacingExtra="15sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20sp"
        android:textSize="20sp"
        android:text="Date"/>
        
         <TextView
        android:id="@+id/textView02"
        android:layout_below="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20sp"
        android:lineSpacingExtra="15sp"
        android:textSize="20sp"
        android:text="@string/amount"/>
        
        <TextView
        android:id="@+id/textView03"
        android:layout_below="@+id/textView02"
          android:lineSpacingExtra="15sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20sp"
        android:textSize="20sp"
        android:text="Type"/>
<TextView  android:id="@+id/textView3"
      android:textSize="18sp"
      android:textColor="@color/black" 
        android:layout_width="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView4"
      android:textSize="18sp"
      android:textColor="@color/black" 
        android:layout_width="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView04"
      android:textSize="18sp"
      android:textColor="@color/black" 
        android:layout_width="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView02"
        android:layout_alignBottom="@+id/textView02"
        android:layout_toRightOf="@+id/textView02"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView05"
      android:textSize="18sp"
      android:textColor="@color/black" 
        android:layout_width="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView03"
        android:layout_alignBottom="@+id/textView03"
        android:layout_toRightOf="@+id/textView03"
        android:layout_alignParentRight="true"        
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
      android:background="@drawable/list_try3"
    android:layout_height="match_parent" >
     <Spinner
        android:id="@+id/payments"
        android:layout_width="fill_parent"      
        android:layout_height="wrap_content"
        android:prompt="@string/filter"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="8dip"/>
     <ListView            
    android:id="@+id/rental_payments"   
       android:layout_width="fill_parent"    
     android:layout_height="wrap_content"  
      android:listSelector="@drawable/list_try3"
     android:layout_weight="1"
      android:dividerHeight="8dp"  
    android:divider="#336699"
    android:scrollbars="vertical"  
    android:layout_marginLeft="20sp" 
    android:layout_marginRight="20sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
  android:fastScrollEnabled="true"  
    android:fastScrollAlwaysVisible="true" 
    />
   <TextView android:id="@+id/Explain"
         android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:textColor= "@color/white"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:gravity="center"
    android:text="Long press to view more menu options"
    android:padding="4dip"
    android:background="#FF666666"/>  

</LinearLayout>

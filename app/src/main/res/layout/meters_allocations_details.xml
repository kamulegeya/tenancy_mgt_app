<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/general"
    android:layout_height="match_parent" >
    <TextView android:id="@+id/textView1"
        android:layout_width="wrap_content"
           android:textColor="@color/black"  
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:textSize="18sp"   
        android:layout_marginLeft="15sp"         
         android:lineSpacingExtra="15sp"     
        android:paddingBottom="5sp"/>
    <TextView android:id="@+id/textView2"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="15sp"
           android:textColor="@color/black" 
         android:text="@string/tenant"
          android:lineSpacingExtra="15sp" 
         android:layout_below="@+id/textView1"
        android:textSize="18sp"
        android:paddingBottom="5sp"/>
    <TextView android:id="@+id/textView3"
          android:textColor="@color/black" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="15sp"
        android:textSize="18sp"
         android:lineSpacingExtra="15sp" 
         android:layout_below="@+id/textView2"
         android:text="@string/meter"
        android:paddingBottom="5sp"/>   
       
    <TextView android:id="@+id/textView4"
          android:textColor="@color/black" 
         android:layout_marginLeft="15sp"
         android:gravity="center"
        android:layout_width="wrap_content"
         android:lineSpacingExtra="15sp" 
        android:layout_height="wrap_content"
         android:text="@string/sdate"
          android:layout_below="@+id/textView3"
        android:textSize="18sp"
        android:paddingBottom="5sp"/>
   <TextView android:id="@+id/reading"
          android:textColor="@color/black" 
         android:layout_marginLeft="15sp"
         android:gravity="center"
        android:layout_width="wrap_content"
         android:lineSpacingExtra="15sp" 
        android:layout_height="wrap_content"
         android:text="@string/reading"
          android:layout_below="@+id/textView4"
        android:textSize="18sp"
        android:paddingBottom="5sp"/>
   
    
    <TextView  android:id="@+id/textView5"
        android:layout_width="wrap_content"
         android:textColor="@color/green" 
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
          android:textSize="18sp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"        
        android:layout_marginLeft="110sp"    
        android:layout_alignParentRight="true"        
        />
    <TextView  android:id="@+id/textView6"
        android:layout_marginLeft="70sp"
          android:textColor="@color/green" 
           android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView7"
    android:layout_marginLeft="10sp"
      android:textColor="@color/green" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textSize="18sp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView8"
    android:textColor="@color/green" 
    android:layout_marginLeft="40sp"
        android:layout_width="wrap_content"
          android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignParentRight="true"        
        />
<TextView  android:id="@+id/textView9"
      android:textColor="@color/green"  
    android:layout_marginLeft="40sp"
        android:layout_width="wrap_content"
          android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reading"
        android:layout_alignBottom="@+id/reading"
        android:layout_toRightOf="@+id/reading"
        android:layout_alignParentRight="true"        
        />
 <TextView android:id="@+id/textView10"
          android:textColor="@color/black" 
         android:layout_marginLeft="15sp"
         android:gravity="center"
        android:layout_width="wrap_content"
         android:lineSpacingExtra="15sp" 
        android:layout_height="wrap_content"
         android:text="@string/edate"
          android:layout_below="@+id/reading"
        android:textSize="18sp"/>
         <TextView android:id="@+id/textView11"
          android:textColor="@color/black" 
         android:layout_marginLeft="15sp"
         android:gravity="center"
        android:layout_width="wrap_content"
         android:lineSpacingExtra="15sp" 
        android:layout_height="wrap_content"
         android:text="Last Reading"
          android:layout_below="@+id/textView10"
        android:textSize="18sp"/>
           <TextView android:id="@+id/textView12"
          android:textColor="@color/black" 
         android:layout_marginLeft="15sp"
         android:gravity="center"
        android:layout_width="wrap_content"
         android:lineSpacingExtra="15sp" 
        android:layout_height="wrap_content"
         android:text="Last Reading Date"
          android:layout_below="@+id/textView11"
        android:textSize="18sp"/>
         <TextView  android:id="@+id/textView13"
      android:textColor="@color/green"  
    android:layout_marginLeft="80sp"
        android:layout_width="wrap_content"
          android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_alignParentRight="true"        
        />
             <TextView  android:id="@+id/textView14"
      android:textColor="@color/green"  
    android:layout_marginLeft="50sp"
        android:layout_width="wrap_content"
          android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignParentRight="true"        
        />
            <TextView  android:id="@+id/textView15"
      android:textColor="@color/green"  
    android:layout_marginLeft="20sp"
        android:layout_width="wrap_content"
          android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_alignParentRight="true"        
        />     
</RelativeLayout>

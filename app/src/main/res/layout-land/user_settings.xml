<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
    android:id="@+id/textviewname"
    android:textStyle="bold"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:lineSpacingExtra="10sp"
    android:text="Name"
    />
    <TextView
    android:id="@+id/TelNumber"
     android:textStyle="bold"
     android:layout_marginLeft="20sp"
    android:layout_marginTop="10sp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/textviewname"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:lineSpacingExtra="10sp"
    android:text="TelNo."
    />
      <TextView
    android:id="@+id/txtaddress"
     android:textStyle="bold"
     android:layout_marginLeft="20sp"
    android:layout_marginTop="10sp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/TelNumber"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:lineSpacingExtra="10sp"
    android:text="Address"
    />
      <TextView
    android:id="@+id/txtCurrency"
     android:textStyle="bold"
     android:layout_marginLeft="20sp"
    android:layout_marginTop="10sp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/txtaddress"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:lineSpacingExtra="10sp"
    android:text="Currency Symbol"
    />
    <EditText  android:id="@+id/edittxtname"
      android:textSize="18sp"
      android:textColor="@color/green" 
        android:layout_marginRight="8sp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textviewname"
        android:layout_alignBottom="@+id/textviewname"
        android:layout_toRightOf="@+id/textviewname"
        android:layout_alignParentRight="true"        
        />
   <EditText  android:id="@+id/edittxtNumber"
      android:textSize="18sp"
      android:textColor="@color/green" 
        android:layout_marginRight="8sp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TelNumber"
        android:layout_alignBottom="@+id/TelNumber"
        android:layout_toRightOf="@+id/TelNumber"
        android:layout_alignParentRight="true"        
        /> 
      <EditText  android:id="@+id/editTxtAddress"
      android:textSize="18sp"
      android:textColor="@color/green" 
        android:layout_width="wrap_content"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtaddress"
        android:layout_alignBottom="@+id/txtaddress"
        android:layout_toRightOf="@+id/txtaddress"
        android:layout_alignParentRight="true"        
        /> 
        
        <EditText  android:id="@+id/edittxtCurrency"
      android:textSize="18sp"
      android:textColor="@color/green" 
        android:layout_width="wrap_content"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="50sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCurrency"
        android:layout_alignBottom="@+id/txtCurrency"
        android:layout_toRightOf="@+id/txtCurrency"
        android:layout_alignParentRight="true"        
        /> 

        <Button
            android:id="@+id/btnAddSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCurrency"  
            android:layout_centerInParent="true"         
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Save"
            android:textSize="15sp" />

</RelativeLayout>
